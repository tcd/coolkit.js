{
    "compilerOptions": {
        "module": "ESNext",
        "target": "es2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "removeComments": true,
        "sourceMap": false,
        "lib": ["dom", "dom.iterable", "esnext"],
        "baseUrl": "./",
        "paths": {
            "@src/*": ["./src/*"],
        },
        // "types": [ "node" ],
        // "outDir": "dist"
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "test/**/*",
        "bin/**/*",
        "dist/**/*",
    ]
}
