{
    "compilerOptions": {
        "module": "ESNext",
        "target": "es2015",
        "moduleResolution": "node",
        "importHelpers": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "removeComments": true,
        "sourceMap": false,
        "lib": ["dom", "dom.iterable", "esnext"],
        "types": [ "node" ],
        // "baseUrl": "./",
        // "paths": {
        //     "@src/*": ["./src/*"],
        // },
        "outDir": "dist"
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "test/**/*",
        "dist/**/*",
    ]
}
